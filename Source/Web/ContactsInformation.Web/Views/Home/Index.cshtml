@model IEnumerable<ContactsInformation.Web.ViewModels.Home.ShowPeopleViewModel>
@{
    ViewBag.Title = "People";
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(p => p.FirstOrDefault().FirstName)</th>
            <th>@Html.DisplayNameFor(p => p.FirstOrDefault().LastName)</th>
            <th>@Html.DisplayNameFor(p => p.FirstOrDefault().Status)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td id="status-section-@person.Id">
                    @Html.Action("ChangePersonStatus", "Home", new { personId = person.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    @Scripts.Render("~/bundles/jqueryAjax")
}
